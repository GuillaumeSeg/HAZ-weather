<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundSplash"
    tools:context=".home.HomeActivity">

    <ImageView
        android:id="@+id/location_img"
        android:layout_height="30dp"
        android:layout_width="0dp"
        android:src="@drawable/location_icon"
        android:tint="@color/colorText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/location_label"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="1"/>
    <TextView
        android:id="@+id/location_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:text="Secteur 34 Charonne Zone Paris"
        android:paddingStart="2dp"
        android:paddingEnd="10dp"
        android:lines="1"
        android:textSize="15sp"
        android:textColor="@color/colorText"
        app:layout_constraintStart_toEndOf="@+id/location_img"
        app:layout_constraintEnd_toStartOf="@+id/line_h_1"
        app:layout_constraintTop_toTopOf="@+id/location_img"
        app:layout_constraintBottom_toBottomOf="@+id/location_img" />
    <View
        android:id="@+id/line_h_1"
        android:layout_marginTop="2dp"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:background="@color/colorText"
        app:layout_constraintStart_toEndOf="@id/location_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/location_img"
        app:layout_constraintTop_toTopOf="@id/location_img"
        app:layout_constraintHorizontal_weight="2"/>

    <View
        android:id="@+id/line_h_2"
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:background="@color/colorText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/date_label"
        app:layout_constraintTop_toBottomOf="@id/location_img" />

    <TextView
        android:id="@+id/date_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:text="Lu 09.11.2165 16:10"
        android:paddingStart="10dp"
        android:paddingEnd="2dp"
        android:lines="1"
        android:textSize="15sp"
        android:textColor="@color/colorText"
        app:layout_constraintStart_toEndOf="@+id/line_h_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/line_h_2"
        app:layout_constraintBottom_toBottomOf="@+id/line_h_2" />





    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/current_weather_container"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/date_label"
        app:layout_constraintBottom_toTopOf="@id/tips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_ve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.40"/>
        <ImageView
            android:id="@+id/current_weather_img"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/location_icon"
            android:tint="@color/colorText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_ve"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/current_weather_label"/>
        <TextView
            android:id="@+id/current_weather_label"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:paddingTop="4dp"
            tools:text="PLUIES ACIDES"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_ve"
            app:layout_constraintTop_toBottomOf="@id/current_weather_img"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/current_weather_temperature"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            tools:text="276 K"
            android:gravity="center_vertical"
            android:textColor="@color/colorText"
            android:paddingStart="10dp"
            android:textSize="35sp"
            app:layout_constraintStart_toEndOf="@id/guideline_ve"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/current_weather_temperature_max"/>
        <TextView
            android:id="@+id/current_weather_temperature_max"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:text="Tmax -> 288.7 K"
            android:gravity="start"
            android:textColor="@color/colorText"
            android:paddingEnd="10dp"
            android:paddingStart="20dp"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/guideline_ve"
            app:layout_constraintEnd_toStartOf="@id/line_h_3"
            app:layout_constraintTop_toBottomOf="@id/current_weather_temperature"
            app:layout_constraintBottom_toTopOf="@id/current_weather_temperature_min"/>
        <TextView
            android:id="@+id/current_weather_temperature_min"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:text="Tmin -> 242 K"
            android:gravity="start"
            android:textColor="@color/colorText"
            android:paddingEnd="10dp"
            android:paddingStart="20dp"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/guideline_ve"
            app:layout_constraintTop_toBottomOf="@id/current_weather_temperature_max"
            app:layout_constraintBottom_toTopOf="@id/current_weather_dew_point_label"/>
        <TextView
            android:id="@+id/current_weather_dew_point_label"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/dew_point"
            android:gravity="start"
            android:textColor="@color/colorText"
            android:paddingEnd="10dp"
            android:paddingStart="20dp"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@id/guideline_ve"
            app:layout_constraintEnd_toStartOf="@id/current_weather_dew_point_value"
            app:layout_constraintTop_toBottomOf="@id/current_weather_temperature_min"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/current_weather_dew_point_value"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:text="276.4 K"
            android:gravity="start"
            android:textColor="@color/colorText"
            android:paddingEnd="10dp"
            android:paddingStart="20dp"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@id/current_weather_dew_point_label"
            app:layout_constraintTop_toTopOf="@id/current_weather_dew_point_label"
            app:layout_constraintBottom_toBottomOf="@id/current_weather_dew_point_label"/>
        <View
            android:id="@+id/line_h_3"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:background="@color/colorText"
            app:layout_constraintStart_toEndOf="@id/current_weather_temperature_max"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/current_weather_temperature_max"
            app:layout_constraintBottom_toBottomOf="@id/current_weather_temperature_max"/>
        <View
            android:id="@+id/line_h_4"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:background="@color/colorText"
            app:layout_constraintStart_toStartOf="@id/guideline_ve"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/current_weather_dew_point_label"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tips"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Il est recommandé de porter son masque à gaz aujourd'hui,"
        android:textColor="@color/colorText"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/current_weather_container"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <View
        android:id="@+id/line_h_5"
        android:layout_marginTop="5dp"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:background="@color/colorText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/good_day"
        app:layout_constraintTop_toTopOf="@id/good_day"
        app:layout_constraintBottom_toBottomOf="@id/good_day"/>
    <TextView
        android:id="@+id/good_day"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:text="Très belle journée à vous !"
        android:textColor="@color/colorText"
        android:paddingStart="10dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/line_h_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tips"/>

</androidx.constraintlayout.widget.ConstraintLayout>